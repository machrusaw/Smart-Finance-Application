<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_bg"
    tools:context=".activity.TransaksiSuksesActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/ic_kembali">
        </ImageView>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:text="Pemberitahuan Transaksi"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:textSize="25sp">

        </TextView>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toBottomOf="@id/linearLayout"
        android:id="@+id/cdts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Berhasil Melakukan Transaksi"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            >

        </TextView>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/lin2"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical"
        android:background="@drawable/bg_round"
        app:layout_constraintEnd_toEndOf="@+id/cdts"
        app:layout_constraintStart_toStartOf="@+id/cdts"
        app:layout_constraintTop_toBottomOf="@+id/cdts">

        <androidx.cardview.widget.CardView
            app:layout_constraintTop_toBottomOf="@id/linearLayout"
            android:id="@+id/cdts1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="40dp"
            android:layout_marginTop="0dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/bg_round">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="110dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_tgl">
                </ImageView>

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="Tanggal"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold">
                </TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp">

            <TextView
                android:id="@+id/tvDate2"
                android:layout_width="75dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="9 Juni 2023"
                android:textColor="#FCBB3C"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints">
            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            app:layout_constraintTop_toBottomOf="@id/linearLayout"
            android:id="@+id/cdts2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="40dp"
            android:layout_marginTop="0dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/bg_round">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="120dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_type">
                </ImageView>

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="Type"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold">
                </TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp">

            <TextView
                android:id="@+id/tvType"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="Pemasukan/Pengeluaran"
                android:textColor="#4CAF50"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints">
            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            app:layout_constraintTop_toBottomOf="@id/lin2"
            android:id="@+id/cdts3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="40dp"
            android:layout_marginTop="0dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/bg_round">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="110dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_nom">
                </ImageView>

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="Nominal"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold">
                </TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp">

            <TextView
                android:id="@+id/tvValue"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="Rp.200.000"
                android:textColor="#4CAF50"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints">
            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:src="@drawable/centang">

        </ImageView>
    </LinearLayout>

    <Button
        android:id="@+id/btnClose"
        app:layout_constraintTop_toBottomOf="@id/lin2"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#FCBB3C"
        android:layout_marginTop="50dp"
        android:text="Tutup"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@drawable/bg_rounded_button"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="50dp"
        android:text="Transaksi ini akan otomatis tercatat di bagian laporan"
        android:textColor="@android:color/white"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>